?>
<?php 
/* Get Theme tab > Navigation Configuration */
$type = Mage::getStoreConfig('titan/genavigationeral/main_menu');
$if_mcp_group = Mage::getStoreConfig('titan/genavigationeral/mcp_group');
?>
<?php if ($type =='default') { ?>
	<?php $_menu = $this->getHtml('level-top') ?>
	<?php if($_menu): ?>
	<a class="toggleMenu pull-right"><span class="fa fa-bars"> </span></a>
	<ul class="nav navbar-nav topMenu ">
		<!-- WORKING ACTIVE STATE HOME BUTTON HACK -->
		<li class="home<?php if (Mage::helper('core/url')->getCurrentUrl() === Mage::helper('core/url')->getHomeUrl()):?> active<?php endif;?>"><a href="<?php echo $this->getUrl('')?>"><?php echo $this->__('Home') ?></a></li>
		<!-- WORKING ACTIVE STATE HOME BUTTON HACK -->
	<?php echo $_menu ?>
	</ul>
	<?php endif ?>
<?php }else { ?>
	<?php echo $this->getLayout()->createBlock("menupro/menu")->setGroup_id($if_mcp_group)->setTemplate("menupro/menupro.phtml")->toHtml(); ?>
<?php } ?>