<?xml version="1.0"?>
<config>
	<modules>
		<MST_Titan>
			<version>1.0.7</version>
		</MST_Titan>
	</modules>
	<frontend>
		<routers>
			<titan>
				<use>standard</use>
				<args>
					<module>MST_Titan</module>
					<frontName>titan</frontName>
				</args>
			</titan>
		</routers>
		<layout>
			<updates>
				<titan_layout>
					<file>titan.xml</file>
				</titan_layout>
			</updates>
		</layout>
	</frontend>
 	<admin>
        <routers>
            <titan>
                <use>admin</use>
                <args>
                    <module>MST_Titan</module>
                    <frontName>titan</frontName>
                </args>
            </titan>
        </routers>
    </admin>
	<adminhtml>
		<menu>
            <titan module="titan">
                <title><![CDATA[T2 THEME]]></title>
                <sort_order>71</sort_order>
                <children>
                    <titan_layout module="titan">
                        <title>Layout Builder</title>
                        <sort_order>30</sort_order>
						<action>titan/adminhtml_layout/index</action>
                    </titan_layout>
					<titan_block module="titan">
                        <title>Manage Snippets</title>
                        <sort_order>60</sort_order>
						<action>titan/adminhtml_block/index</action>
                    </titan_block>
					<setting module="titan">
                        <title>Configuration</title>
                        <sort_order>80</sort_order>
                        <action>adminhtml/system_config/edit/section/titan</action>
                    </setting>
                </children>
            </titan>
        </menu>
